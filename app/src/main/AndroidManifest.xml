<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snail.snailSafe"
    android:versionCode="2"
    android:versionName="2.1"
    >
<!--
第一位：重大版本更新
第二位：更新部分功能
第三位：代表修复原有版本的bug
-->
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17"
    />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" /><!--发送短信 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!--获取位置权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /><!--获取位置权限 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_log"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.frame.StartAppActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 系统界面 -->
        <activity android:name=".activity.frame.HomeActivity"/>
        <activity android:name=".activity.frame.ChoseContactActivity"/>
        <!-- 手机防盗 -->
        <activity android:name=".activity.mobileLost.MobileLostActivity"/>
        <activity android:name=".activity.mobileLost.StepOneActivity"/>
        <activity android:name=".activity.mobileLost.StepSecondActivity"/>
        <activity android:name=".activity.mobileLost.StepThirdActivity"/>
        <activity android:name=".activity.mobileLost.FunctionIntroduceActivity"/>
        <activity android:name=".activity.mobileLost.ChangeSecretKeyActivity"/>
        <activity android:name=".activity.mobileLost.Introduce_HowDelConstantActivity"/>
        <activity android:name=".activity.mobileLost.Introduce_HowDelPictureActivity"/>
        <activity android:name=".activity.mobileLost.Introduce_HowGetPositionActivity"/>
        <activity android:name=".activity.mobileLost.Introduce_HowObtainStatusActivity"/>
        <!--帮助他人-->
        <activity android:name=".activity.help.HelpOtherActivity"/>
        <activity android:name=".activity.help.LostMobileConstantActivity"/>
        <activity android:name=".activity.help.LostMobilePictureActivity"/>
        <activity android:name=".activity.help.LostMobilePositionActivity"/>
        <activity android:name=".activity.help.LostMobileStatusActivity"/>
        <!-- 系统设置 -->
        <activity android:name=".activity.systemSetting.SystemSettingActivity" />





        <!--注册广播接收 -->
        <!--接收短信-->
        <receiver android:name=".broadCast.lostMobile.ObtainPositionBroadReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED">
                </action>
            </intent-filter>
        </receiver>





        <service android:name=".service.mobileLost.LocationService"/>
    </application>
</manifest>